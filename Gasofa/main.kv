#:kivy 1.10.0

<TextInputBase@TextInput>:
    multiline: False
    input_filter: 'float'
    write_tab: False
    input_type: 'number'
    font_size: '35sp'
    padding: [10, 10, 10, 10]


<GridLayout>:
    cols: 2
    Label:
        id: lblkms
        text: 'Kms'
    TextInputBase:
        id: inputkms
        on_text: root.on_text_validate_callback(self, 'inputkms')
    Label:
        id: lblprice
        text: '€/l'
    TextInputBase:
        id: inputprice
        on_text: root.on_text_validate_callback(self)
    Label:
        id: lblavgconsumption
        text: 'l/100'
    TextInputBase:
        id: inputavgconsumption
        on_text: root.on_text_validate_callback(self)
    Label:
        id: lbllitres
        text: 'Litres'
    TextInputBase:
        id: inputlitres
        disabled: True
        readonly: True
        is_focusable: False
    Label:
        id: lbleuros
        text: '€'
    TextInputBase:
        id: inputeuros
        disabled: True
        readonly: True
        is_focusable: False
    Button:
        id: btngo
        text: 'Go'
        disabled: True
        on_press: root.on_press_callback(self)
    Button:
        id: btnclear
        text: 'Clear'
        disabled: True
        on_press: root.on_clear_callback(self)
